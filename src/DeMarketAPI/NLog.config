<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Error"

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore" />
  </extensions>

  <!-- the targets to write to -->
  <targets async="true" concurrentWrites="true"
        keepFileOpen="false">
    <!-- File Target for all log messages with basic details -->
    <!-- File Target for all log messages with basic details -->
    <target xsi:type="File" name="infoFile" fileName="${basedir}/logs/DeMarketAPI/log-info-${shortdate}.log"
                archiveAbovesize="52428800" maxArchiveDays="30" maxArchiveFiles="100" archiveEvery="Day" archiveNumbering="Sequence"
				layout="${longdate}|${threadid}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />

    <target xsi:type="File" name="warnFile" fileName="${basedir}/logs/DeMarketAPI/log-warn-${shortdate}.log"
                archiveAbovesize="52428800" maxArchiveDays="30" maxArchiveFiles="100" archiveEvery="Day" archiveNumbering="Sequence"
				layout="${longdate}|${threadid}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />

    <target xsi:type="File" name="errorFile" fileName="${basedir}/logs/DeMarketAPI/log-error-${shortdate}.log"
                archiveAbovesize="52428800" maxArchiveDays="30" maxArchiveFiles="100" archiveEvery="Day" archiveNumbering="Sequence"
				layout="${longdate}|${threadid}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />
    <target xsi:type="Console" name="console" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!-- Log all events to the json-file target -->
    <logger name="Microsoft.AspNetCore.*" minlevel="Trace" writeTo="blackhole" final="true" />
    <logger name="*" writeTo="infoFile" minlevel="Info" maxlevel="Info" />
    <logger name="*" writeTo="warnFile" minlevel="Warn" maxlevel="Warn" />
    <logger name="*" writeTo="errorFile" minlevel="Error" maxlevel="Error" />
    <logger name="*" writeTo="console" minlevel="Info"  maxlevel="Error" />
  </rules>
  <rules>
  </rules>
</nlog>